# Server Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=product-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=product_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Database SSL Configuration (for AWS RDS)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true
DB_SSL_CA_PATH=/path/to/rds-combined-ca-bundle.pem

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
CACHE_TTL=3600

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# AWS X-Ray (Optional)
AWS_XRAY_ENABLED=false
AWS_REGION=ap-southeast-1
